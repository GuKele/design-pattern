{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ 生成活动文件",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${fileDirname}/*.cpp",
        "-I",
        "/usr/local/include",
        //"-L",
        //"/usr/local/lib",
        "-o",
        "test.out",
        //"-ggdb", // 尽量生成gdb可以使用的调试信息
        //"-o", // 指定输出路径和文件名为...
        //"${wordspaceFolder}/Builder/test", // 
        //"PersonBuilder.cpp", // 待编译文件1
        //"hello.cpp"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    }
  ],
  "version": "2.0.0"
}